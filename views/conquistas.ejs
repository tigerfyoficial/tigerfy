<%- include('partials/visual_hottrack') %>

<main class="journey">
  <h1 class="journey-title">Jornada de Conquistas</h1>
  <p class="journey-sub">Acompanhe seus marcos e veja seu progresso evoluir.</p>

  <div class="timeline">
    <div class="line"></div>

    <% const conquistas = [
      {titulo: 'Pacote 10K', valor: 'R$ 10.000', progresso: 40, descricao: 'Parab√©ns por alcan√ßar R$ 10.000 em faturamento! Continue escalando suas campanhas rumo a novos patamares.', imagem: 'https://i.ibb.co/XVmHLvN/placa10k.png'},
      {titulo: 'Pacote 50K', valor: 'R$ 50.000', progresso: 15, descricao: 'Voc√™ atingiu um marco importante com vis√£o e consist√™ncia. Continue crescendo com estrat√©gia.', imagem: 'https://i.ibb.co/2Z1ZYjn/placa50k.png'},
      {titulo: 'Pacote 100K', valor: 'R$ 100.000', progresso: 0, descricao: 'Com determina√ß√£o e foco, voc√™ superou o desafio dos seis d√≠gitos. Mantenha o ritmo.', imagem: 'https://i.ibb.co/djS5w1y/placa100k.png'},
      {titulo: 'Pacote 250K', valor: 'R$ 250.000', progresso: 0, descricao: 'Voc√™ se destacou com lideran√ßa e resultados s√≥lidos. Um verdadeiro exemplo de alta performance.', imagem: 'https://i.ibb.co/JF6ZKWh/placa250k.png'},
      {titulo: 'Pacote 500K', valor: 'R$ 500.000', progresso: 0, descricao: 'Agora voc√™ domina o jogo. Suas campanhas atingem patamares de elite.', imagem: 'https://i.ibb.co/XVbWqvJ/placa500k.png'},
      {titulo: 'Pacote 1 Milh√£o', valor: 'R$ 1.000.000', progresso: 0, descricao: 'Um marco lend√°rio. Voc√™ entrou para o topo da TigerFy, com resultados extraordin√°rios.', imagem: 'https://i.ibb.co/BtfsN7K/placa1m.png'}
    ]; %>

    <% conquistas.forEach((c,i)=>{ %>
      <div class="achievement <%= i % 2 === 0 ? 'left' : 'right' %>">
        <div class="achievement-content">
          <div class="achievement-text">
            <h2><%= c.titulo %></h2>
            <span class="badge"><%= c.valor %></span>
            <p><%= c.descricao %></p>

            <div class="progress-box">
              <div class="progress-info">
                <span>Progresso</span>
                <span><%= c.progresso %>%</span>
              </div>
              <div class="progress-bar">
                <div class="progress" style="width:<%= c.progresso %>%"></div>
              </div>
            </div>
          </div>
          <img src="<%= c.imagem %>" alt="<%= c.titulo %>" class="achievement-img">
        </div>
      </div>
    <% }) %>
  </div>
</main>

<style>
  html,body{
    background:#0a0a0a;
    color:#fff;
    font-family:'Inter',sans-serif;
    -webkit-font-smoothing:antialiased;
    margin:0;padding:0;
  }

  /* üîπ Centraliza√ß√£o e alinhamento ajustados */
  main.journey {
    max-width:1200px;
    margin:0 auto;
    padding:60px 20px 80px 20px; /* ‚Üì dist√¢ncia igual √† dashboard */
    transform:translateX(-38px); /* mesma centraliza√ß√£o da dashboard */
    transform-origin:top center;
  }

  .journey-title {
    text-align:center;
    color:#ffcc00;
    font-size:2.2rem;
    margin:0 0 6px 0;
  }

  .journey-sub {
    text-align:center;
    color:#a0a0a0;
    margin-bottom:40px; /* espa√ßamento equilibrado */
  }

  .timeline {
    position:relative;
    display:flex;
    flex-direction:column;
    align-items:center;
    padding-top:10px;
  }

  .line {
    position:absolute;
    top:0;
    width:3px;
    height:100%;
    background:linear-gradient(180deg,rgba(255,204,0,0.6),rgba(255,204,0,0.1));
    z-index:0;
  }

  .achievement {
    position:relative;
    width:100%;
    max-width:1000px;
    display:flex;
    justify-content:flex-start;
    margin-bottom:80px;
    opacity:0;
    transform:translateY(40px);
    transition:all 0.6s ease;
  }

  .achievement.right { flex-direction:row-reverse; }
  .achievement.show { opacity:1; transform:translateY(0); }

  .achievement-content {
    background:linear-gradient(90deg,rgba(255,255,255,0.04),rgba(255,255,255,0.02));
    border:1px solid rgba(255,204,0,0.15);
    border-radius:12px;
    padding:32px 38px;
    display:flex;
    justify-content:space-between;
    align-items:center;
    box-shadow:0 0 20px rgba(255,204,0,0.05);
    width:47%;
    z-index:1;
    transition:.3s;
  }

  .achievement-content:hover {
    border-color:rgba(255,204,0,0.35);
    box-shadow:0 0 30px rgba(255,204,0,0.15);
  }

  .achievement.left .achievement-content { margin-right:auto; }
  .achievement.right .achievement-content { margin-left:auto; }

  .achievement-text {
    max-width:55%;
    display:flex;
    flex-direction:column;
    justify-content:center;
  }

  .achievement-text h2 {
    color:#ffcc00;
    font-size:1.35rem;
    margin:0 0 6px 0;
  }

  .achievement-text p {
    color:#b5b5b5;
    font-size:.95rem;
    line-height:1.5;
    margin:10px 0 15px 0;
  }

  .badge {
    display:inline-block;
    background:rgba(255,204,0,0.15);
    color:#ffcc00;
    font-weight:600;
    border-radius:20px;
    padding:5px 14px;
    font-size:.9rem;
    margin-bottom:4px;
  }

  .achievement-img {
    width:200px;
    height:auto;
    border-radius:8px;
    object-fit:contain;
    align-self:center;
    margin-left:20px;
    margin-right:20px;
    display:flex;
  }

  .progress-box { margin-top:8px; }
  .progress-info {
    display:flex;
    justify-content:space-between;
    font-size:0.85rem;
    color:#b5b5b5;
    margin-bottom:4px;
  }

  .progress-bar {
    width:100%;
    height:8px;
    background:rgba(255,255,255,0.07);
    border-radius:6px;
    overflow:hidden;
  }

  .progress {
    height:100%;
    background:linear-gradient(90deg,#ffcc00,#ffd84a);
    transition:width 0.6s ease;
  }

  @media(max-width:950px){
    .achievement-content{
      width:100%!important;
      flex-direction:column;
      align-items:center;
      gap:18px;
      text-align:center;
    }
    .achievement-img{
      width:100%;
      max-width:250px;
      margin:0;
    }
    .achievement-text{
      max-width:100%;
      align-items:center;
    }
  }

</style>

<script>
  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if(entry.isIntersecting){
        entry.target.classList.add('show');
      }
    });
  }, { threshold: 0.2 });
  document.querySelectorAll('.achievement').forEach(el => observer.observe(el));
</script>
