<%- include('partials/visual_hottrack') %>

<div class="tiger-offers-list">
  <div class="list-header">
    <div>
      <h1>Minhas Ofertas</h1>
      <p>Lista simples e objetiva das suas ofertas. Clique para abrir o painel premium da oferta.</p>
    </div>
    <a href="/ofertas/criar" class="btn-primary">Criar nova oferta</a>
  </div>

  <div class="list-grid">
    <% if (!offers || offers.length === 0) { %>
      <div class="empty">
        <h3>Você ainda não tem ofertas</h3>
        <p>Crie sua primeira oferta para começar.</p>
        <a href="/ofertas/criar" class="btn-primary small">Criar oferta</a>
      </div>
    <% } else { %>
      <% offers.forEach(function(o){ %>
        <!-- Card da oferta -->
        <a class="offer-card" href="/ofertas/painel/<%= o._id %>" data-offer-id="<%= o._id %>">
          <div class="card-top">
            <h3 class="offer-name"><%= o.name %></h3>
            <!-- (STATUS REMOVIDO) -->
          </div>

          <!-- Botão … (menu) — não navega, abre modal -->
          <button
            type="button"
            class="offer-actions-inline"
            title="Gerenciar oferta"
            aria-label="Gerenciar oferta"
            data-offer-id="<%= o._id %>"
            data-offer-name="<%- o.name %>"
            data-offer-type="<%- o.botType %>"
            data-offer-bots="<%- (typeof o.botsCount !== 'undefined' ? o.botsCount : 0) %>"
          >
            <span class="dots">•••</span>
          </button>

          <!-- Mini resumo -->
          <div class="meta">
            <span>ID: <%= String(o._id).slice(0, 8) %></span>
            <span class="sep">|</span>
            <span>Bots: <%= (typeof o.botsCount !== 'undefined' ? o.botsCount : 0) %></span>
            <span class="sep">|</span>
            <span>Tipo:
              <% if (o.botType === 'bot_padrao') { %>Padrão<% }
                 else if (o.botType === 'bot_fluxo_wiin') { %>Fluxo<% }
                 else if (o.botType === 'bot_fluxo_many') { %>Fluxo (Manychat)<% }
                 else { %>Outro<% } %>
            </span>
          </div>

          <span class="go">›</span>
        </a>
      <% }) %>
    <% } %>
  </div>
</div>

<!-- Modal de Gerenciar Oferta (mesmo visual; permanece opcional) -->
<div class="offer-modal-overlay" data-modal="manage-offer" hidden>
  <div class="offer-modal">
    <div class="offer-modal-header">
      <h3>Gerenciar Oferta</h3>
      <button type="button" class="offer-modal-close" aria-label="Fechar">
        <span>✕</span>
      </button>
    </div>

    <div class="offer-modal-body">
      <!-- Resumo -->
      <section class="block">
        <h4>Resumo da Oferta</h4>
        <div class="kv">
          <div><strong>Nome atual:</strong> <span id="mo-name">—</span></div>
          <div><strong>ID:</strong> <span id="mo-id">—</span></div>
          <div><strong>Quantidade de bots vinculados:</strong> <span id="mo-bots">0</span></div>
          <div><strong>Tipo de Bot:</strong> <span id="mo-type">—</span></div>
        </div>
      </section>

      <!-- Renomear -->
      <section class="block">
        <h4>Renomear Oferta</h4>
        <div class="rename-row">
          <input id="mo-rename-input" type="text" placeholder="Ex: Mundo VIP 2.0, Oferta Principal..." />
          <button id="mo-rename-save" type="button" class="btn-primary">Salvar novo nome</button>
        </div>
        <small class="error-text" id="mo-rename-error" hidden>Não foi possível renomear. Tente novamente.</small>
      </section>

      <!-- Excluir -->
      <section class="block danger">
        <h4>Atenção</h4>
        <p class="warn">Cuidado: esta ação é permanente.</p>
        <button id="mo-delete" type="button" class="btn-danger">Excluir oferta</button>
        <small class="error-text" id="mo-delete-error" hidden>Falha ao excluir. Tente novamente.</small>
      </section>
    </div>
  </div>
</div>

<style>
  .tiger-offers-list{
    padding:60px 80px 100px 130px;
    max-width:calc(100vw - 120px);
    margin:0 auto;
    color:#fff;
  }
  .list-header{
    display:flex; align-items:center; justify-content:space-between; margin-bottom:18px;
  }
  .list-header h1{ margin:0 0 6px; font-size:2rem; color:#ffcc00; }
  .list-header p{ margin:0; color:#b4b4b4; font-size:.95rem; }

  .list-grid{
    display:grid; gap:12px;
    grid-template-columns:repeat(auto-fill, minmax(280px, 1fr));
  }
  .offer-card{
    position:relative;
    display:block; text-decoration:none; color:#fff;
    background:rgba(0,0,0,0.70);
    border:1px solid rgba(255,204,0,0.12);
    border-radius:16px; padding:14px 42px 18px 14px; /* espaço p/ botão ... */
    transition:.2s;
    overflow:hidden;
  }
  .offer-card:hover{ border-color:#ffcc00; box-shadow:0 0 16px rgba(255,204,0,0.3); }

  .card-top{ display:flex; align-items:center; justify-content:space-between; gap:8px; }
  .card-top h3{ margin:0; font-size:1rem; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; }

  /* (STATUS REMOVIDO) */

  .meta{
    display:flex; gap:10px; flex-wrap:wrap; margin-top:8px;
    font-size:.78rem; color:#c9c9c9; align-items:center;
  }
  .meta .sep{ opacity:.6; }

  .go{ position:absolute; right:12px; bottom:10px; opacity:.6; font-size:1.4rem; }

  .empty{ text-align:center; padding:30px 16px; background:rgba(0,0,0,0.70); border:1px solid rgba(255,204,0,0.12); border-radius:16px; }
  .btn-primary.small{ padding:8px 16px; font-size:.85rem; }
  .btn-primary{
    border:none; border-radius:10px; padding:10px 22px; font-weight:600; cursor:pointer; text-decoration:none;
    background:linear-gradient(90deg,#ffcc00,#d4a100); color:#1a1300; box-shadow:0 0 12px rgba(255,204,0,0.4); font-size:.95rem;
  }

  /* ===== Botão … (menu) — FIX: hover sem movimento ===== */
  .offer-actions-inline{
    position:absolute;
    right:10px;
    top:14px;                 /* fixo, não centraliza pela altura p/ evitar “pulo” */
    width:34px; height:34px;
    border-radius:999px;
    border:1px solid rgba(255,204,0,0.18);
    background:rgba(255,255,255,0.06);
    display:flex; align-items:center; justify-content:center;
    cursor:pointer;
    /* ✅ NÃO animar transform; evitar deslocamento */
    transition: background-color .15s ease, border-color .15s ease, box-shadow .15s ease;
    z-index:2;
  }
  .offer-actions-inline .dots{
    font-size:16px; line-height:1; transform: translateY(-0.5px); user-select:none;
  }
  .offer-actions-inline:hover{
    background: rgba(255,204,0,.12);
    border-color: rgba(255,204,0,.28);
    box-shadow: 0 0 0 2px rgba(255,204,0,0.12) inset;
  }

  /* ===== Modal (mantém identidade TigerFy) ===== */
  .offer-modal-overlay[hidden]{ display:none !important; }
  .offer-modal-overlay{
    position:fixed; inset:0; z-index:9999;
    backdrop-filter: blur(8px);
    background:rgba(0,0,0,0.45);
    display:flex; align-items:center; justify-content:center;
  }
  .offer-modal{
    width:min(560px, calc(100vw - 48px));
    background: rgba(0,0,0,0.78);
    border:1px solid rgba(255,204,0,0.16);
    border-radius:16px;
    box-shadow: 0 0 40px rgba(0,0,0,0.6);
    color:#fff;
    overflow:hidden;
  }
  .offer-modal-header{
    display:flex; align-items:center; justify-content:space-between; gap:12px;
    padding:14px 14px;
    border-bottom:1px solid rgba(255,204,0,0.12);
  }
  .offer-modal-header h3{
    margin:0; font-size:1.05rem; color:#ffcc00;
  }
  .offer-modal-close{
    width:32px; height:32px; border-radius:999px;
    border:1px solid rgba(255,255,255,.18);
    background:rgba(255,255,255,.06);
    display:flex; align-items:center; justify-content:center; /* ✅ centraliza o X */
    cursor:pointer; color:#fff;
    transition: background-color .15s ease, border-color .15s ease;
  }
  .offer-modal-close:hover{ background:rgba(255,255,255,.12); border-color:rgba(255,255,255,.28); }

  .offer-modal-body{ padding:14px; display:flex; flex-direction:column; gap:14px; }
  .block{ background:rgba(255,255,255,0.05); border:1px solid rgba(255,255,255,0.10); border-radius:12px; padding:12px; }
  .block h4{ margin:0 0 8px; font-size:.95rem; color:#e9e9e9; }
  .kv{ display:grid; gap:6px; font-size:.9rem; color:#dcdcdc; }
  .rename-row{ display:flex; gap:10px; }
  .rename-row input{
    flex:1; padding:9px 10px; border-radius:10px; border:1px solid rgba(255,255,255,0.22);
    background:rgba(255,255,255,0.06); color:#fff; outline:none; font-size:.95rem;
    transition:border-color .2s, box-shadow .2s;
  }
  .rename-row input:focus{ border-color:#ffcc00; box-shadow:0 0 0 2px rgba(255,204,0,0.28); }

  .btn-danger{
    border:none; border-radius:10px; padding:10px 16px; font-weight:600; cursor:pointer;
    background:linear-gradient(90deg,#ff4060,#e02044); color:#fff;
  }
  .block.danger .warn{ color:#ff8aa4; margin:0 0 10px; font-size:.9rem; }
  .error-text{ color:#ff8aa4; display:block; margin-top:6px; }
</style>

<script>
  (function(){
    const overlay = document.querySelector('.offer-modal-overlay[data-modal="manage-offer"]');
    const modalClose = overlay?.querySelector('.offer-modal-close');
    const renameInput = overlay?.querySelector('#mo-rename-input');
    const renameBtn   = overlay?.querySelector('#mo-rename-save');
    const deleteBtn   = overlay?.querySelector('#mo-delete');

    // Campos resumo
    const fName = overlay?.querySelector('#mo-name');
    const fId   = overlay?.querySelector('#mo-id');
    const fBots = overlay?.querySelector('#mo-bots');
    const fType = overlay?.querySelector('#mo-type');

    // Erros
    const errRename = overlay?.querySelector('#mo-rename-error');
    const errDelete = overlay?.querySelector('#mo-delete-error');

    let currentOfferId = null;

    // Abre modal com dados do card
    document.addEventListener('click', (e) => {
      const btn = e.target.closest('.offer-actions-inline');
      if (!btn) return;

      // Impede navegação do <a>
      e.preventDefault();
      e.stopPropagation();

      const offerId   = btn.getAttribute('data-offer-id');
      const offerName = btn.getAttribute('data-offer-name') || '';
      const offerType = btn.getAttribute('data-offer-type') || 'bot_padrao';
      const offerBots = btn.getAttribute('data-offer-bots') || '0';

      currentOfferId = offerId;
      if (fName) fName.textContent = offerName;
      if (fId)   fId.textContent   = offerId;
      if (fBots) fBots.textContent = offerBots;
      if (fType) {
        fType.textContent = (offerType === 'bot_padrao')
          ? 'Padrão'
          : (offerType === 'bot_fluxo_wiin')
          ? 'Fluxo'
          : (offerType === 'bot_fluxo_many')
          ? 'Fluxo (Manychat)'
          : 'Outro';
      }

      if (renameInput) renameInput.value = offerName;

      if (errRename) errRename.hidden = true;
      if (errDelete) errDelete.hidden = true;

      overlay.hidden = false;
    });

    // Fechar modal
    modalClose?.addEventListener('click', () => overlay.hidden = true);
    overlay?.addEventListener('click', (e) => {
      if (e.target === overlay) overlay.hidden = true;
    });

    // Renomear (rota de exemplo: POST /ofertas/:id/renomear  { novoNome })
    renameBtn?.addEventListener('click', async () => {
      if (!currentOfferId) return;
      const novoNome = (renameInput?.value || '').trim();
      if (!novoNome) {
        if (errRename) { errRename.textContent = 'Digite um nome válido.'; errRename.hidden = false; }
        return;
      }
      if (errRename) errRename.hidden = true;

      try {
        const res = await fetch(`/ofertas/${currentOfferId}/renomear`, {
          method: 'POST',
          headers: { 'Content-Type':'application/json' },
          body: JSON.stringify({ novoNome })
        });
        if (!res.ok) throw new Error('bad_status');

        // Atualiza nome no card sem recarregar
        const card = document.querySelector(`.offer-card[data-offer-id="${currentOfferId}"]`);
        card?.querySelector('.offer-name')?.replaceChildren(document.createTextNode(novoNome));

        // Atualiza dados do botão …
        const btn = card?.querySelector('.offer-actions-inline');
        if (btn) btn.setAttribute('data-offer-name', novoNome);

        overlay.hidden = true;
      } catch (err) {
        if (errRename) { errRename.textContent = 'Não foi possível renomear. Tente novamente.'; errRename.hidden = false; }
      }
    });

    // Excluir (rota de exemplo: DELETE /ofertas/:id)
    deleteBtn?.addEventListener('click', async () => {
      if (!currentOfferId) return;
      if (!confirm('Tem certeza que deseja excluir esta oferta? Esta ação é permanente.')) return;

      if (errDelete) errDelete.hidden = true;

      try {
        const res = await fetch(`/ofertas/${currentOfferId}`, { method:'DELETE' });
        if (!res.ok) throw new Error('bad_status');

        // Remove card da lista
        const card = document.querySelector(`.offer-card[data-offer-id="${currentOfferId}"]`);
        card?.parentElement?.removeChild(card);

        overlay.hidden = true;
      } catch (err) {
        if (errDelete) { errDelete.textContent = 'Falha ao excluir. Tente novamente.'; errDelete.hidden = false; }
      }
    });

    // Evita que o clique no modal feche por acidente
    overlay?.querySelector('.offer-modal')?.addEventListener('click', (e) => e.stopPropagation());
  })();
</script>
