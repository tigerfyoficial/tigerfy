    <main class="main-content">

<style>
  /* =========================
     âš¡ SIDEBAR TIGERFY PREMIUM
  ============================ */
  .sidebar {
    width: 230px;
    background: #0a0a0a;
    color: var(--text-color);
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    border-right: 1px solid rgba(255, 204, 0, 0.05);
    display: flex;
    flex-direction: column;
    align-items: stretch;
    z-index: 20;
    padding: 25px 0 20px;
  }

  /* LOGO */
  .sidebar-header {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 25px;
  }

  .logo-wrap {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .logo-icon {
    width: 18px;
    height: 18px;
    background: radial-gradient(circle at 50% 50%, #ffcc00, #d4a100);
    border-radius: 4px;
    box-shadow: 0 0 10px rgba(255,204,0,0.6);
  }

  .logo-text {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--accent-color);
  }

  /* MENU */
  .menu {
    display: flex;
    flex-direction: column;
    padding: 0 18px;
    gap: 8px;
  }

  .menu a {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 14px;
    border-radius: 8px;
    color: var(--muted-color);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: all 0.25s ease;
  }

  .menu a svg {
    width: 18px;
    height: 18px;
    stroke: var(--muted-color);
    transition: stroke 0.25s ease;
  }

  .menu a:hover {
    background: rgba(255,204,0,0.06);
    color: var(--accent-color);
  }

  .menu a:hover svg {
    stroke: var(--accent-color);
  }

  .menu a.active {
    background: linear-gradient(90deg, rgba(255,204,0,0.08), rgba(255,204,0,0.02));
    border-left: 3px solid var(--accent-color);
    color: #fff;
    font-weight: 600;
    box-shadow: inset 0 0 10px rgba(255,204,0,0.15);
  }

  .menu a.active svg {
    stroke: var(--accent-color);
  }

  /* Divisor fino */
  .divider {
    border: none;
    border-top: 1px solid rgba(255,204,0,0.08);
    margin: 12px 0;
  }
</style>
