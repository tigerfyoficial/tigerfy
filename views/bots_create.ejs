<%- include('partials/visual_hottrack') %>

<div class="tiger-offer-create">
  <div class="offer-create-inner">
    <div class="offer-create-header">
      <h1>Criar nova oferta</h1>
      <p>Defina o nome da oferta e o tipo de bot. Você poderá editar tudo depois.</p>
    </div>

    <form action="/ofertas/criar" method="POST" class="offer-create-form">
      <!-- Nome da oferta -->
      <div class="field-group">
        <label for="name">Nome da Oferta <span>*</span></label>
        <input
          type="text"
          id="name"
          name="name"
          required
          placeholder="Ex: Mundo Oculto, VIP Premium, VIP Flix..."
          autocomplete="off"
        />
      </div>

      <!-- Tipo de Bot -->
      <div class="field-group">
        <label>Tipo de Bot</label>
        <p class="small-helper">Escolha o estilo de automação que essa oferta vai usar.</p>

        <input type="hidden" name="botType" id="botTypeInput" value="bot_padrao"/>

        <div class="pill-row" data-group="botType">
          <button type="button" class="pill active" data-value="bot_padrao">
            <span class="pill-title">Bot Padrão</span>
            <span class="pill-sub">Fluxo clássico de automação para ofertas padrão.</span>
          </button>

          <button type="button" class="pill disabled" disabled>
            <span class="pill-title">Bot Fluxo</span>
            <span class="pill-tag">Em breve</span>
          </button>

          <button type="button" class="pill disabled" disabled>
            <span class="pill-title">Bot Fluxo (Manychat)</span>
            <span class="pill-tag">Em breve</span>
          </button>
        </div>
      </div>

      <!-- Traqueamento (REMOVIDO da interface) -->
      <!-- Mantém o backend vivo com o valor padrão -->
      <input type="hidden" name="trackingType" id="trackingTypeInput" value="fb_pixel"/>

      <!-- Botão final -->
      <div class="actions">
        <a href="/ofertas" class="btn-secondary">Voltar</a>
        <button type="submit" class="btn-primary big">Criar oferta</button>
      </div>
    </form>
  </div>
</div>

<style>
  /* ===== Container da página (respeita sidebar, sem quebrar tema) ===== */
  .tiger-offer-create{
    padding:60px 80px 100px 130px; /* mesmo padrão das outras telas do painel */
    max-width:1200px;
    margin:0 auto;
    color:#fff;
  }

  /* ===== Wrapper centralizador do cabeçalho + card ===== */
  .offer-create-inner{
    max-width:880px;
    margin:0 auto;                  /* centraliza tudo dentro da área de conteúdo */
    display:flex;
    flex-direction:column;
    gap:24px;
  }

  .offer-create-header h1{
    font-size:2.1rem;
    color:#ffcc00;
    margin:0 0 8px;
  }
  .offer-create-header p{
    margin:0;
    color:#b4b4b4;
    font-size:.95rem;
  }

  /* ===== Card principal (visual TigerFy intacto) ===== */
  .offer-create-form{
    background:rgba(0,0,0,0.78);
    border-radius:20px;
    padding:28px 26px 24px;
    border:1px solid rgba(255,204,0,0.16);
    box-shadow:0 0 40px rgba(0,0,0,0.6);
    margin:0 auto;                  /* reforça centralização do card */
    width:100%;
  }

  /* ===== Campos ===== */
  .field-group{ margin-bottom:22px; }
  .field-group label{
    display:block;
    font-size:.95rem;
    font-weight:600;
    margin-bottom:6px;
  }
  .field-group label span{ color:#ffcc00; }

  .small-helper{
    font-size:.8rem;
    color:#c9c9c9;
    margin:0 0 8px;
  }

  .field-group input[type="text"]{
    width:100%;
    padding:10px 12px;
    border-radius:10px;
    border:1px solid rgba(255,255,255,0.22);
    background:rgba(255,255,255,0.06);
    color:#fff;
    outline:none;
    font-size:.95rem;
    transition:border-color .2s, box-shadow .2s;
  }
  .field-group input[type="text"]::placeholder{ color:rgba(255,255,255,0.65); }
  .field-group input[type="text"]:focus{
    border-color:#ffcc00;
    box-shadow:0 0 0 2px rgba(255,204,0,0.28);
  }

  /* ===== Pills ===== */
  .pill-row{ display:flex; flex-wrap:wrap; gap:10px; }
  .pill{
    flex:1;
    min-width:210px;
    background:rgba(255,255,255,0.05);
    border-radius:14px;
    border:1px solid rgba(255,255,255,0.10);
    padding:10px 12px;
    text-align:left;
    cursor:pointer;
    transition:.25s;
    display:flex; flex-direction:column; gap:4px;
    color:#eaeaea;
  }
  .pill .pill-title{ font-size:.9rem; font-weight:600; }
  .pill .pill-sub{ font-size:.78rem; color:#c4c4c4; }
  .pill .pill-tag{ font-size:.75rem; color:#ffcc00; }

  .pill.disabled{ opacity:.4; cursor:not-allowed; }
  .pill:not(.active):hover:not(.disabled){
    border-color:rgba(255,204,0,0.45);
    background:rgba(255,255,255,0.10);
  }
  .pill.active{
    border-color:#ffcc00;
    background:radial-gradient(circle at top left,#fff7bf,#ffcc00 45%,#8a5a16 100%);
    color:#111;
    box-shadow:0 0 18px rgba(255,204,0,0.55);
  }
  .pill.active .pill-title{ color:#111; }
  .pill.active .pill-sub{ color:#2b2100; }

  /* ===== Ações ===== */
  .actions{ margin-top:24px; display:flex; justify-content:flex-end; gap:12px; }
  .btn-primary, .btn-secondary{
    border:none; border-radius:10px; padding:10px 22px;
    font-weight:600; cursor:pointer; text-decoration:none;
    font-size:.95rem; display:inline-flex; align-items:center; justify-content:center;
  }
  .btn-primary.big{
    padding:12px 26px;
    background:linear-gradient(90deg,#ffcc00,#d4a100);
    color:#1a1300;
    box-shadow:0 0 16px rgba(255,204,0,0.45);
  }
  .btn-secondary{ background:rgba(255,255,255,0.12); color:#fff; }
  .btn-secondary:hover{ background:rgba(255,255,255,0.18); }

  /* ===== Responsivo ===== */
  @media (max-width: 980px){
    .tiger-offer-create{ padding:50px 18px 80px 18px; }
    .offer-create-inner{ max-width:100%; }
    .offer-create-form{ padding:18px; }
  }
</style>

<script>
  // Lógica das "pills" (mantida). Tracking continua como hidden (valor padrão).
  document.addEventListener('DOMContentLoaded', () => {
    function setupPillGroup(groupName, hiddenInputId){
      const group = document.querySelector(`.pill-row[data-group="${groupName}"]`);
      if(!group) return; // se não existir (caso do traqueamento), não faz nada
      const hiddenInput = document.getElementById(hiddenInputId);
      group.addEventListener('click', (e) => {
        const btn = e.target.closest('.pill');
        if(!btn || btn.classList.contains('disabled')) return;
        group.querySelectorAll('.pill').forEach(p => p.classList.remove('active'));
        btn.classList.add('active');
        const value = btn.getAttribute('data-value');
        if(hiddenInput && value){ hiddenInput.value = value; }
      });
    }
    setupPillGroup('botType', 'botTypeInput');
    // Traqueamento removido da UI — mantemos apenas o hidden com valor padrão
    // setupPillGroup('trackingType', 'trackingTypeInput'); // (intencionalmente não usado)
  });
</script>
